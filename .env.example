# Environment variables
# This is an example file - copy to .env for local development
# For production, set these variables in your deployment environment

# Database
DATABASE_URL="file:./dev.db"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-change-this-in-production"

# Email Authentication
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email-user"
EMAIL_SERVER_PASSWORD="your-email-password"
EMAIL_FROM="noreply@recruitreply.com"
ALLOWED_ADMIN_EMAILS="admin@example.com"

# GitLab Authentication (optional)
GITLAB_CLIENT_ID="your-gitlab-client-id"
GITLAB_CLIENT_SECRET="your-gitlab-client-secret"

# Cloudflare Turnstile
NEXT_PUBLIC_TURNSTILE_SITE_KEY="your-turnstile-site-key"
TURNSTILE_SECRET_KEY="your-turnstile-secret-key"

# Cloudflare AutoRAG
CLOUDFLARE_AUTORAG_API_KEY="your-cloudflare-autorag-api-key"
CLOUDFLARE_AUTORAG_ENDPOINT="your-cloudflare-autorag-endpoint"
NEXT_PUBLIC_AUTORAG_API_URL="https://autorag.recruitreply.example.com"
